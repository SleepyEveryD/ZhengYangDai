generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  supabaseUid String   @unique
  email       String   @unique
  createdAt   DateTime @default(now())

  trips       Trip[]
}

enum TripStatus{
  RECORDING
  COMPLETED
}

model Trip {
  id        String   @id @default(uuid())
  userId    String
  distance  Float
  duration  Int
  avgSpeed  Float
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum ReportStatus {
  DRAFT
  CONFIRMED
  PUBLISHABLE
}

enum ConditionLevel {
  OPTIMAL
  MEDIUM
  SUFFICIENT
  MAINTENANCE
}

model PathSegment {
  id         String   @id @default(uuid())
  streetName String
  geometry   Json?
  createdAt  DateTime @default(now())

  reports PathReport[]
  merged  MergedSegment?
}

model PathReport {
  id        String         @id @default(uuid())
  userId    String?
  anonId    String?        //匿名用户/会话ID（比如 cookie/session）
  segmentId String
  status    ReportStatus   @default(DRAFT)
  condition ConditionLevel
  notes     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  segment PathSegment @relation(fields: [segmentId], references: [id])
  user    User        @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([anonId])
  @@index([segmentId, status, createdAt])
}

model MergedSegment {
  id              String         @id @default(uuid())
  segmentId       String         @unique
  mergedCondition ConditionLevel
  confidence      Float
  reportCount     Int
  latestReportAt  DateTime
  updatedAt       DateTime       @updatedAt

  segment PathSegment @relation(fields: [segmentId], references: [id])
}